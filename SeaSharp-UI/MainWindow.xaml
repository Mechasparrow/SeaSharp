<Window x:Class="SeaSharp_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaSharp_UI"
        mc:Ignorable="d"
        Title="SeaSharp" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,76,0,0" TextWrapping="Wrap" Text="Choose a Sea Creature" VerticalAlignment="Top" FontSize="25"/>
        <Grid Margin="100,150,100,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Margin="20,20,20,20" Click="Button_Click" x:Name="Button1" >
                <Image Name="CreatureImage1" />
            </Button>
            <Button Margin="20,20,20,20" Click="Button_Click" x:Name="Button2"  Grid.ColumnSpan="1" Grid.Column="1">
                <Image Name="CreatureImage2" />
            </Button>
            <Button Margin="20,20,20,20" Click="Button_Click" x:Name="Button3" Grid.ColumnSpan="1" Grid.Column="2" >
                <Image Name="CreatureImage3" />
            </Button>
        </Grid>

    </Grid>
</Window>
